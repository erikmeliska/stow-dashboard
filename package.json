{
  "name": "stow-dashboard",
  "version": "0.1.0",
  "description": "A modern web dashboard for visualizing and managing your local development projects",
  "license": "MIT",
  "author": "TriSoft",
  "repository": {
    "type": "git",
    "url": "https://github.com/trisoft/stow-dashboard.git"
  },
  "keywords": [
    "dashboard",
    "project-management",
    "nextjs",
    "react",
    "developer-tools"
  ],
  "bin": {
    "stow-mcp": "./src/mcp/server.mjs"
  },
  "scripts": {
    "dev": "next dev -p ${STOW_PORT:-3088}",
    "build": "next build",
    "start": "next start -p ${STOW_PORT:-3088}",
    "tray": "node scripts/tray.mjs",
    "lint": "eslint .",
    "scan": "node scripts/scan.mjs -s data/projects_metadata.jsonl",
    "scan:force": "node scripts/scan.mjs -s data/projects_metadata.jsonl -f",
    "mcp": "node src/mcp/server.mjs"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@next/eslint-plugin-next": "^16.1.6",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-table": "^8.20.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "lucide-react": "^0.460.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "simple-git": "^3.30.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  }
}
